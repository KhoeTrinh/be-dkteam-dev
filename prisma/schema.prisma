generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  userImage    String?    @default("/assets/user-default-profile-image.webp")
  username     String    
  email        String     @unique
  password     String
  isAdmin      Boolean?   @default(false)
  authorProd   UsersOnProducts[]
}

model Product {
  id           String     @id @default(uuid())
  link         String 
  productImage String
  title        String
  description  String     @db.VarChar(200)
  publishDate  DateTime   @default(now())
  author       UsersOnProducts[]
}

model UsersOnProducts {
  authorProd   User       @relation(fields: [authorProdId], references: [id])
  authorProdId String
  author       Product    @relation(fields: [authorId], references: [id])
  authorId     String

  @@id([authorProdId, authorId])
}